package wewe.fuding.utils;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import org.apache.http.HttpEntity;
import org.apache.http.HttpResponse;
import org.apache.http.NameValuePair;
import org.apache.http.StatusLine;
import org.apache.http.client.HttpClient;
import org.apache.http.client.entity.UrlEncodedFormEntity;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.impl.client.DefaultHttpClient;
import org.apache.http.message.BasicNameValuePair;
import org.apache.http.util.EntityUtils;
import org.json.JSONException;
import org.json.JSONObject;

import wewe.fuding.domain.User;
import android.os.AsyncTask;

public class HttpRequestUtils extends AsyncTask<String, Void, HttpResponse> {

    private static final String POST_URL = "http://54.213.91.157:52274/signUp/fbuser";
 
    public interface OnHttpRequestListener {
        public void onSuccess(User user);
        public void onFailed();
    }
 
    private OnHttpRequestListener listener;
 
    public HttpRequestUtils(OnHttpRequestListener onHttpRequestListener) {
        this.listener = onHttpRequestListener;
    }
 
    @Override
    protected HttpResponseUtils doInBackground(String... params) {
        String accessToken = params[0];
        String testValue = params[1]; 
        
        if (accessToken == null) {
            return null;
        }
 
        try {
            HttpPost post = new HttpPost(POST_URL);
            List<NameValuePair> pairs = new ArrayList<NameValuePair>();
            pairs.add(new BasicNameValuePair("user_accessToken", accessToken));
            pairs.add(new BasicNameValuePair("testValue", testValue));
            HttpEntity entity = new UrlEncodedFormEntity(pairs);
            post.setEntity(entity);
 
            HttpClient client = new DefaultHttpClient();
 
            return client.execute(post);
        } catch (IOException e) {
            e.printStackTrace();
        }
 
        return null;
    }
 
    @Override
    protected void onPostExecute(HttpResponse httpResponse) {
        if (httpResponse == null) {
            listener.onFailed();
            return;
        }
 
        StatusLine line = httpResponse.getStatusLine();
        if (line.getStatusCode() == 200) {
            try {
                String result = EntityUtils.toString(httpResponse.getEntity());
                JSONObject object = new JSONObject(result);
                listener.onSuccess(User.fromJson(object));
                return;
            } catch (IOException e) {
                e.printStackTrace();
            } catch (JSONException e) {
                e.printStackTrace();
            }
        }
 
        listener.onFailed();
    }
}